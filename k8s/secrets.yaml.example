# IMPORTANT: Do not commit actual secrets to version control!
# This is a template. Copy to secrets.yaml and replace with real base64-encoded values.
# To create secrets.yaml:
# 1. cp k8s/secrets.yaml.example k8s/secrets.yaml
# 2. Replace placeholder values with base64-encoded secrets:
#    echo -n "your-mongodb-uri" | base64
#    echo -n "your-jwt-secret" | base64
# 3. Apply: kubectl apply -f k8s/secrets.yaml
# 4. Add secrets.yaml to .gitignore

apiVersion: v1
kind: Secret
metadata:
  name: educationelly-secrets
  namespace: educationelly
  labels:
    app: educationelly-graphql
type: Opaque
data:
  # MongoDB connection string (base64 encoded)
  # Example: mongodb+srv://user:password@cluster.mongodb.net/database
  MONGODB_URI: bW9uZ29kYjovL3BsYWNlaG9sZGVy  # Replace with: echo -n "your-mongodb-uri" | base64

  # JWT secret for token signing (base64 encoded)
  # Generate strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
  JWT_SECRET: cGxhY2Vob2xkZXItand0LXNlY3JldA==  # Replace with: echo -n "your-jwt-secret" | base64
